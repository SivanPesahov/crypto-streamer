{
  "name": "crypto-streamer",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm-run-all --parallel rabbitmq app scheduler history",
    "rabbitmq": "CONF_ENV_FILE=\"/opt/homebrew/etc/rabbitmq/rabbitmq-env.conf\" /opt/homebrew/opt/rabbitmq/sbin/rabbitmq-server",
    "app": "next dev",
    "worker": "ts-node -P tsconfig.worker.json src/workers/cryptoWorker.ts",
    "worker:risers-and-fallers": "ts-node -P tsconfig.worker.json src/workers/cryptoRisersAndFallersWorker.ts",
    "worker:coin-history": "ts-node -P tsconfig.worker.json src/workers/coinHistoryWorker.ts",
    "workers": "npm-run-all --parallel worker worker:risers-and-fallers worker:coin-history",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "scheduler": "ts-node -P tsconfig.worker.json src/scheduler/fetchScheduler.ts",
    "history": "tsx src/scheduler/historyScheduler.ts"
  },
  "dependencies": {
    "amqplib": "^0.10.8",
    "axios": "^1.11.0",
    "chart.js": "^4.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.1",
    "lucide-react": "^0.540.0",
    "mysql2": "^3.14.3",
    "next": "15.4.4",
    "node-cron": "^4.2.1",
    "react": "19.1.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "19.1.0",
    "recharts": "^2.15.4",
    "redis": "^5.8.1",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/amqplib": "^0.10.7",
    "@types/chart.js": "^2.9.41",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.4.4",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.4",
    "tw-animate-css": "^1.3.7",
    "typescript": "^5"
  }
}
